{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "APIAuthentication",
      "Effect": "Allow",
      "Action": "sts:GetCallerIdentity",
      "Resource": "*",
      "Comment": "Required for API authentication via AWS credentials"
    },
    {
      "Sid": "DiskMetadataReadLegacy",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:Query"
      ],
      "Resource": [
        "arn:aws:dynamodb:*:*:table/pytorch-gpu-dev-disks",
        "arn:aws:dynamodb:*:*:table/pytorch-gpu-dev-reservations"
      ],
      "Comment": "Read-only access to disk metadata (legacy, will migrate to PostgreSQL). Reservations table still needed to check if disk is in use."
    }
  ]
}